<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.booklist.MainActivity"
    >

    <EditText
        android:id="@+id/enter_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:ems="14"
        android:hint="Enter Book Name" />

    <Button
        android:id="@+id/seacrh_books"
        android:layout_width="52dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_search_black_48dp"
        android:focusable="true"
        android:onClick="fetchBooksData" />

    <ListView
        android:id="@+id/list_books"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/enter_book_name"
        android:layout_marginTop="8dp"
        android:drawSelectorOnTop="true"
        android:orientation="vertical">
    </ListView>
</RelativeLayout>